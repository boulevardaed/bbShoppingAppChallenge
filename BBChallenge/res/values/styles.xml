<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    	<item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <style name="CustomDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/TitleBackground</item>
    </style>
    
    <style name="TitleBackground" parent="android:Widget.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ab_background_textured_bb</item>
    </style>
    
    <style name="CustomButton" parent="android:Widget.DeviceDefault.Light.Button">
        <item name="android:background">@drawable/bb_btn_default_holo_light</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_background_textured_bb</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    
   	<style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white</item>
 	</style>
    
</resources>
